#!/bin/execlineb -P

redirfd -r 0 /dev/console
redirfd -w 1 /dev/console
fdmove -c 2 1

ifelse -X { redirfd -w 2 /dev/null importas -i RESCUE RESCUE }
{
    foreground { s6-echo -- "Dropping to rescue shell." }
    /bin/cd /
    /bin/sh -i
}

foreground { s6-echo -- "Access to rescue shell not permitted." }
s6-sleep 300
