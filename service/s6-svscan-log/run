#!/bin/execlineb -P

redirfd -w 2 /dev/console
redirfd -w 1 /dev/null
redirfd -rnb 0 fifo

s6-envuidgid logger
foreground { s6-mkdir /run/s6/uncaught-logs }
if { s6-chmod 2700 /run/s6/uncaught-logs }
if { s6-chown -U /run/s6/uncaught-logs }

emptyenv -c
s6-applyuidgid -zU
s6-log -bp -- t /run/s6/uncaught-logs
