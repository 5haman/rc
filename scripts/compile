#!/bin/execlineb -P

cd /etc/s6

backtick -in host { s6-hostname }
importas -iu host host
if { ln -snf ${host} env/host }

backtick -in date { s6-clock }
importas -iu date date
if { s6-rc-compile compiled-${date} source }
if { s6-ln -s compiled-${date} compiled.n }
if { s6-rename compiled.n compiled }

s6-envdir /etc/s6/env/host/services
importas -ius additional add
if { s6-rc-bundle -c /etc/s6/compiled -f add ok-all ok-all ${additional} }

restorecon -RF .
