#!/bin/execlineb -P

cd /etc/s6
backtick -n date { s6-clock }
importas -iu date date

if { s6-rc-compile compiled-${date} source }
if { restorecon -RF -e /etc/s6/.git . }

if { run_init s6-rc-update -l /run/s6/s6-rc /etc/s6/compiled-${date} }
if { s6-ln -s compiled-${date} compiled.n }
s6-rename compiled.n compiled
