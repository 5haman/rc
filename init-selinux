#!/bin/execlineb -P

if { /etc/s6/rc.prepare }

s6-envdir -I -- /etc/s6/env
redirfd -r 0 /dev/null
redirfd -wnb 1 /run/service/s6-svscan-log/fifo

background
{
    s6-setsid --
    redirfd -w 1 /run/service/s6-svscan-log/fifo
    fdmove -c 1 2  # output to /dev/console
    /etc/s6/rc.init
}

emptyenv -c
cd /run/service
fdmove -c 2 1
s6-svscan -st0
