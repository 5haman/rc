#!/bin/execlineb -P

# temporary
/bin/s6-env -i
/bin/redirfd -a 1 /run/init-log
/bin/redirfd -a 2 /run/init-log

/bin/export PATH "/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
/bin/cd /
s6-setsid -b --
umask 022
if { s6-echo -- "\ns6 init booting up...\n" }

#if { s6-mount -t tmpfs -o mode=0755 tmpfs /run }
#if { s6-mount -t devtmpfs none /dev }
#if { s6-mount -t proc none /proc }
#if { s6-mount -t sysfs none /sys }
#if { s6-mount -t selinuxfs none /sys/fs/selinux }
#if { load_policy -i }

/etc/s6/init-selinux
