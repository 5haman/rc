s6-envdir -f /etc/s6/env/host/net/lan
multisubstitute
{
    importas -isu -d"\n" addrs addrs
    importas -iu dev dev
    importas -iu gateway gateway
}

if
{
    forx -o 0 addr { ${addrs} }
    importas -isu -d" " addr addr
    if { ip addr replace dev ${dev} ${addr} }
}

if { ip link set dev ${dev} up }
if { ip route replace default via ${gateway} }
